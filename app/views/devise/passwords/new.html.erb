<h2>パスワードをお忘れですか?</h2>

<%= form_for(resource, as: resource_name, url: edit_user_password_custom_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更しますか？", formaction: edit_user_password_custom_path %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>