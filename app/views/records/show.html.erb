<% if @records.present? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Breakfast</th>
        <!-- 他のヘッダー項目もここに追加 -->
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= record.user.name %></td>
          <td><%= record.breakfast %></td>
          <!-- 他のデータ項目もここに追加 -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No records found for this date.</p>
<% end %>


<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th>Snack</th>
      <!-- 他のカラムを追加する場合はここに追加してください -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= image_tag record.breakfast_img.url if record.breakfast_img.attached? %></td>
        <td><%= image_tag record.lunch_img.url if record.lunch_img.attached? %></td>
        <td><%= image_tag record.dinner_img.url if record.dinner_img.attached? %></td>
        <td><%= image_tag record.snack_img.url if record.snack_img.attached? %></td>

        <td><%= record.user.name %></td>
        <td><%= record.breakfast %></td>
        <td><%= record.lunch %></td>
        <td><%= record.dinner %></td>
        <td><%= record.snack %></td>
        
        <td><%= record.breakfast_cal %></td>
        <td><%= record.lunch_cal %></td>
        <td><%= record.dinner_cal %></td>
        <td><%= record.snack_cal %></td>
        <!-- 他のカラムを追加する場合はここに追加してください -->
        <td>
          <%= link_to 'Show', record_path(record) %>
          <%= link_to 'Edit', edit_record_path(record) %>
          <%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

