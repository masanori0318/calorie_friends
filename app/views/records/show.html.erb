<% if @records.present? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Breakfast</th>
        <th>Lunch</th>
        <th>Dinner</th>
        <th>Snack</th>
        <!-- 他のヘッダー項目もここに追加 -->
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <h1>Record Details</h1>

          <p>User: <%= @record.user.name %></p>
          <p>Breakfast: <%= @record.breakfast %></p>
          <p>Lunch: <%= @record.lunch %></p>
          <p>Dinner: <%= @record.dinner %></p>
          <p>Snack: <%= @record.snack %></p>
          <!-- 他のカラムも追加 -->

          <td>
          <% if record.images.attached? %>
            <% record.images.each do |image| %>
              <%= link_to image_tag(show_image_path(id: record.id, image_id: image.id), class: "img-thumbnail"), show_image_path(id: record.id, image_id: image.id) %><br>
            <% end %>
          <% else %>
            <p>No images attached.</p>
          <% end %>
        </td>

          <%= link_to 'Back', records_path %>
          <td><%= record.user.name %></td>
          <td><%= record.breakfast %></td>
          <td><%= record.lunch %></td>
          <td><%= record.dinner %></td>
          <td><%= record.snack %></td>
          <td><%= record.breakfast_cal %></td>
          <td><%= record.lunch_cal %></td>
          <td><%= record.dinner_cal %></td>
          <td><%= record.snack_cal %></td>

          <!-- 他のデータ項目もここに追加 -->
          <td>
            <%= link_to 'Show', record_path(record) %>
            <%= link_to 'Edit', edit_record_path(record) %>
            <%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table
<% else %>
  <p>No records found for this date.</p>
<% end %>

<%= link_to 'New Record', new_record_path %>