<% if @record.present? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Breakfast</th>
        <th>Lunch</th>
        <th>Dinner</th>
        <th>Snack</th>
        <!-- 他のヘッダー項目もここに追加 -->
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @record.user.name %></td>
        <td><%= @record.breakfast %></td>
        <td><%= @record.lunch %></td>
        <td><%= @record.dinner %></td>
        <td><%= @record.snack %></td>
        <td><%= @record.breakfast_cal %></td>
        <td><%= @record.lunch_cal %></td>
        <td><%= @record.dinner_cal %></td>
        <td><%= @record.snack_cal %></td>     
        <td><%= @record.breakfast_cal + @record.lunch_cal + @record.dinner_cal + @record.snack_cal %></td> <!-- 合計カロリーの表示 -->
        <!-- 他のカラムも追加 -->
        
        <!-- 他のデータ項目もここに追加 -->
        <td>
          <%= link_to 'Show', record_path(@record, month: @record.date.month, year: @record.date.year) %>
          <%= link_to 'Edit', edit_record_path(@record) %>
          <%= link_to 'Destroy', record_path(@record), data: { turbo_method: :delete }  %>
        </td>
      </tr>
    </tbody>
  </table>
<% else %>
  <p>No record found for this date.</p>
<% end %>