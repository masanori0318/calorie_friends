<% if @record.present? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Breakfast</th>
        <th>Lunch</th>
        <th>Dinner</th>
        <th>Snack</th>
        <!-- 他のヘッダー項目もここに追加 -->
        <th>Breakfast Image</th>
        <th>Lunch Image</th>
        <th>Dinner Image</th>
        <th>Snack Image</th>
        <!-- 他のヘッダー項目もここに追加 -->
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      
        <tr>
          <td><%= @record.user.name %></td>
          <td><%= @record.breakfast %></td>
          <td><%= @record.lunch %></td>
          <td><%= @record.dinner %></td>
          <td><%= @record.snack %></td>

          <td><%= @record.breakfast_cal %></td>
          <td><%= @record.lunch_cal %></td>
          <td><%= @record.dinner_cal %></td>
          <td><%= @record.snack_cal %></td>     
          <!-- 他のカラムも追加 -->

          <td>
            <% if @record.breakfast_img.attached? %>
              <%= image_tag url_for(@record.breakfast_img), { width: 100, height: 100, record_path: { year: @record.date.year, month: @record.date.month, day: @record.date.day } } %>
            <% else %>
              <p>No image attached.</p>
            <% end %>
          </td>
          <td>
            <% if @record.lunch_img.attached? %>
              <%= image_tag url_for(@record.lunch_img), { width: 100, height: 100, record_path: { year: @record.date.year, month: @record.date.month, day: @record.date.day } } %>
            <% else %>
              <p>No image attached.</p>
            <% end %>
          </td>
          <td>
            <% if @record.dinner_img.attached? %>
              <%= image_tag url_for(@record.dinner_img), { width: 100, height: 100, record_path: { year: @record.date.year, month: @record.date.month, day: @record.date.day } } %>
            <% else %>
              <p>No image attached.</p>
            <% end %>
          </td>
          <td>
            <% if @record.snack_img.attached? %>
              <%= image_tag url_for(@record.snack_img), { width: 100, height: 100, record_path: { year: @record.date.year, month: @record.date.month, day: @record.date.day } } %>
            <% else %>
              <p>No image attached.</p>
            <% end %>
          </td>
          <!-- 他のデータ項目もここに追加 -->
          <td>
            <%= link_to 'Show', record_path(@record) %>
            <%= link_to 'Edit', edit_record_path(@record) %>
            <%= link_to 'Destroy', @record, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
       
      
    </tbody>
  </table>
<% else %>
  <p>No record found for this date.</p>
<% end %>