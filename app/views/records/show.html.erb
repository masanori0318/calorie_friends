<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th>Snack</th>
      <!-- 他のカラムを追加する場合はここに追加してください -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user.name %></td>
        <td><%= record.breakfast %></td>
        <td><%= record.lunch %></td>
        <td><%= record.dinner %></td>
        <td><%= record.snack %></td>
        <!-- 他のカラムを追加する場合はここに追加してください -->
        <td>
          <%= link_to 'Show', record_path(record) %>
          <%= link_to 'Edit', edit_record_path(record) %>
          <%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path %>