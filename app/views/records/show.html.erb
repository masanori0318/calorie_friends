<% if @record.present? %>
  <%# シンプルカレンダーの日付をクリックしたらその日付を表示 %>
  <%= link_to "マイページ", user_path(current_user), class: "post" %>
  <% if @date.present? %>
    <p>選択された日付</p>
    <h2><%= @date.to_s %></h2>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>お名前</th>
        <th>朝食</th>
        <th>昼食</th>
        <th>夕食</th>
        <th>間食</th>
        <th>朝食 Cal</th>
        <th>昼食 Cal</th>
        <th>夕食 Cal</th>
        <th>間食 Cal</th>
        <th>合計カロリー数</th> <!-- 合計カロリーの表示 -->
        <!-- 他のヘッダー項目もここに追加 -->
      </tr>
    </thead>
    <tbody>
      <tr>
        <p>朝食:</p>
            <%= image_tag @record.breakfast_image.url if @record.breakfast_image.present? %>          

        <p>昼食:</p>
            <%= image_tag @record.lunch_image.url if @record.lunch_image.present? %>

        <p>夕食:</p>
            <%= image_tag @record.dinner_image.url if @record.dinner_image.present? %>

        <p>間食:</p>
            <%= image_tag @record.snack_image.url if @record.snack_image.present? %>  

        <td><%= @record.user.name %></td>
        <td><%= @record.breakfast %></td>
        <td><%= @record.lunch %></td>
        <td><%= @record.dinner %></td>
        <td><%= @record.snack %></td>
        <td><%= @record.breakfast_cal || 0 %></td>
        <td><%= @record.lunch_cal || 0 %></td>
        <td><%= @record.dinner_cal || 0 %></td>
        <td><%= @record.snack_cal || 0 %></td>
        <td><%= (@record.breakfast_cal || 0) + (@record.lunch_cal || 0) + (@record.dinner_cal || 0) + (@record.snack_cal || 0) %></td>
        <!-- 他のカラムも追加 -->
        
        <!-- 他のデータ項目もここに追加 -->
        <td>
          <%= link_to '詳細', user_path(@record.user) %>
          <%= link_to '編集', edit_record_path(@record) %>
          <%= button_to '削除', record_path(@record), method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-button' %>
          
        </td>
      </tr>
    </tbody>
  </table>
<% else %>
  <%= link_to "マイページ", user_path(current_user), class: "post" %>
<% end %>