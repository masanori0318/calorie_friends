<!DOCTYPE html>
<html>
<head>
  <title>Records</title>
</head>
<body>
  <h1>Records</h1>

  <% if @records.any? %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Breakfast</th>
          <th>Lunch</th>
          <th>Dinner</th>
          <th>Snack</th>
          <!-- 他の属性に関するヘッダーを追加 -->
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |record| %>
          <tr>
            <td><%= record.date %></td>
            <td><%= record.breakfast %></td>
            <td><%= record.lunch %></td>
            <td><%= record.dinner %></td>
            <td><%= record.snack %></td>
            <!-- 他の属性に関するセルを追加 -->
            <td><%= link_to '詳細', record %></td>
            <td><%= link_to '編集', edit_record_path(record) %></td>
            <td><%= link_to '削除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No records found.</p>
  <% end %>

  <%= link_to '新規レコード', new_record_path %>
</body>
</html>